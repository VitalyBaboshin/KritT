{
  "$schema": "https://biomejs.dev/schemas/1.9.4/schema.json",
  "vcs": {
    "enabled": false,
    "clientKind": "git",
    "useIgnoreFile": false
  },
  "files": {
    "ignoreUnknown": false,
    "ignore": []
  },
  "formatter": {
    "enabled": true,
    "indentStyle": "tab"
  },
  "organizeImports": {
    "enabled": true
  },
  "linter": {
    "enabled": true,
    "rules": {
      "recommended": true,
      "a11y": {
        "useKeyWithClickEvents": "off",
        "useButtonType": "off"
      },
      "suspicious": {
        "noExplicitAny": "error",
        "noEvolvingTypes": "error"
      },
      "style": {
        "noNonNullAssertion": "off",
        "useImportType": "info"
      },
      "nursery": {
        "noRestrictedTypes": "error",
        "noRestrictedImports": "error"
      },
      "correctness": {
        "noUndeclaredVariables": "error"
      }
    }
  },
  "javascript": {
    "formatter": {
      "quoteStyle": "double"
    }
  }
}
